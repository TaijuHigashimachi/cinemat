source 'https://rubygems.org'
ruby '3.0.2'

gem 'rails', '6.0.3.7'

# Assets
gem 'jquery-rails'
gem 'sass-rails'
gem 'webpacker'

# UI/UX
gem 'jbuilder'
gem 'rails-i18n', '6.0.0'
gem 'turbolinks'

# Application server
gem 'puma', '~> 3.11'

# Database
gem 'pg', '1.1.4'

# Api
gem 'themoviedb-api', '1.3.0'

# Form
gem 'simple_form'

# Authentication
gem 'sorcery'

# Image
gem 'carrierwave'
gem 'fog-aws', '3.9.0'
gem 'mini_magick'

# Configuration
gem 'config', '2.2.3'
gem 'dotenv-rails', '2.7.6'

# Search
gem 'ransack', '2.3.2'

# Pagination
gem 'pagy', '4.11.0'

# Static pages
gem 'high_voltage', '3.1.2'

# Responsive design
gem 'jpmobile', '6.1.1'

gem 'rexml', '3.2.4'

# Reduces boot times through caching; required in config/boot.rb
gem 'bootsnap', '1.8.1'

group :development, :test do
  # CLI
  gem 'spring'
  gem 'spring-commands-rspec'

  # Debugger
  gem 'byebug'

  # Email
  gem 'letter_opener_web', '1.3.4'

