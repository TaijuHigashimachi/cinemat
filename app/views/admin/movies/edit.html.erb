<div class="text-center mt-3">
  <%= link_to '一覧へ', admin_movies_path, class: 'btn btn-secondary' %>
  <%= link_to '詳細', admin_movie_path(@movie), class: 'btn btn-primary' %>
  <%= link_to '削除', admin_movie_path(@movie), method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: 'btn btn-danger' %>
</div>

<%= simple_form_for [:admin, @movie], :html => { :class => 'mt-3' } do |f| %>
  <div class="form-group">
    <%= f.input :title %>
    <%= f.input :poster_url %>
    <%= f.input :trailer_url %>
    <%= f.input :api_id %>
    <%= f.input :release_date, discard_hour: true, discard_minute: true %>
    <%= f.input :user_score %>
    <%= f.input :overview %>
    <%= f.button :submit, '更新', class: 'btn btn-primary' %>
  </div>
<% end %>