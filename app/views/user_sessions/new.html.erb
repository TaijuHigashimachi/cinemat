<div class="form-wrapper mx-auto text-center mb-5">
  <h1>ログイン</h1>

  <%= simple_form_for @user, method: :post, url: login_path, :html => { :class => 'mr-3' } do |f| %>
    <div class="form-group text-start">
      <%= f.input :email, label_html: { class: 'mt-3' } %>
      <%= f.input :password, label_html: { class: 'mt-3' } %>
    </div>
    <div class="form-group">
      <%= f.button :submit, class: 'btn btn-primary mt-3' %>
    </div>
  <% end %>
</div>
