<% content_for(:title, t('.title')) %>
<div class="d-flex">
  <div class="w-25 text-center">
    <%= image_tag "#{@user.avatar}", class: 'profile-image' %>
  </div>
  <div class="d-block w-75">
    <p class="fs-1"><%= @user.name %></p>
    <div class="d-flex">
      <p><%= link_to (t 'users.edit.title'), edit_user_path(@user), class: 'text-white me-5' %></p>
      <p><%= link_to (t 'defaults.logout'), logout_path, method: :delete, class: 'text-white' %></p>
    </div>
  </div>
</div>

<div class="d-flex text-center fs-1">
  <div class="col-4 border bg-warning">
    <%= link_to user_path(@user) do %>
      <i class="fas fa-plus-circle text-white"></i>
    <% end %>
  </div>
  <div class="col-4 border">
    <%= link_to user_path(@user) do %>
      <i class="fas fa-check-circle text-white"></i>
    <% end %>
  </div>
  <div class="col-4 border">
    <%= link_to user_path(@user) do %>
      <i class="fas fa-minus-circle text-white"></i>
    <% end %>
  </div>
</div>
<%= render partial: 'watch_movie', collection: @watch_movies %>
