<div class="infinite-scroll-area">
  <% if request.smart_phone? %>
    <div class="trailer">
      <iframe loading="lazy" src="https://www.youtube.com/embed/<%= watched_movie.trailer_url %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <%= watched_movie.title %>
    <div class="d-flex text-center fs-3 m-1">
      <%= link_to movie_status_path(id: current_user.id, movie_id: watched_movie.id, user_id: current_user.id, status: 'watch'), method: :put, local: true, class: 'watch col-4 border' do %>
        <i class="fas fa-plus-circle text-white"></i>
      <% end %>
      <%= link_to movie_status_path(id: current_user.id, movie_id: watched_movie.id, user_id: current_user.id), method: :delete, local: true, class: 'watched col-4 border bg-warning' do %>
        <i class="fas fa-check-circle text-white"></i>
      <% end %>
      <%= link_to movie_status_path(id: current_user.id, movie_id: watched_movie.id, user_id: current_user.id, status: 'uninterested'), method: :put, local: true, class: 'uninterested col-4 border' do %>
        <i class="fas fa-minus-circle text-white"></i>
      <% end %>
    </div>
  <% else %>
    <div class="d-flex">
      <div class="col-6 me-2">
        <div class="trailer">
          <iframe loading="lazy" src="https://www.youtube.com/embed/<%= watched_movie.trailer_url %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
      </div>
      <div class="col-6">
        <div class="h3 mt-3 ms-1">
          <%= watched_movie.title %>
        </div>
        <div class="d-flex text-center fs-3 m-1">
          <%= link_to movie_status_path(id: current_user.id, movie_id: watched_movie.id, user_id: current_user.id, status: 'watch'), method: :put, local: true, class: 'watch col-4 border' do %>
            <i class="fas fa-plus-circle text-white"></i>
          <% end %>
          <%= link_to movie_status_path(id: current_user.id, movie_id: watched_movie.id, user_id: current_user.id), method: :delete, local: true, class: 'watched col-4 border bg-warning' do %>
            <i class="fas fa-check-circle text-white"></i>
          <% end %>
          <%= link_to movie_status_path(id: current_user.id, movie_id: watched_movie.id, user_id: current_user.id, status: 'uninterested'), method: :put, local: true, class: 'uninterested col-4 border' do %>
            <i class="fas fa-minus-circle text-white"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>