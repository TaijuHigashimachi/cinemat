<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-center">
      <h1><%= t('.title') %></h1>
      <%= simple_form_for @user, url: password_reset_path(@token), local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group text-start mt-3">
          <%= f.input :email %>
        </div>
        <div class="form-group text-start mt-3">
          <%= f.input :password, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group text-start mt-3">
          <%= f.input :password_confirmation, input_html: { class: 'form-control' } %>
        </div>
        <div class="actions">
          <p class="mt-3">
            <%= f.button :submit, class: 'btn btn-primary' %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
