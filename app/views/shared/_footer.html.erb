<footer id='footer' class='footer-bottom bg-dark pb-3'>
  <hr>
  <% if request.smart_phone? %>
    <% if logged_in? %>
      <div class="row">
        <div class="col-6 text-center">
          <%= link_to root_path do %>
            <i class="fa fa-home fa-5x" style="color: white;"></i>
          <% end %>
        </div>
        <div class="col-6 text-center">
          <%= link_to user_path(current_user), class: 'text-light' do %>
            <div>
              <%= image_tag "#{current_user.avatar}", class: 'profile-image', size: '50x50' %>
            </div>
            <div>
              <%= current_user.name %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <% unless request.path.include?("new") || request.path.include?("login") %>
        <div class="row">
          <div class="col-6 text-center fs-3">
            <%= link_to login_path, class: 'text-light' do %>
              <%= (t 'defaults.login') %>
            <% end %>
          </div>
          <div class="col-6 text-center fs-3">
            <%= link_to new_user_path, class: 'text-light' do %>
              <%= (t 'users.new.title') %>
            <% end%>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <div class="d-flex align-items-center">
      <div class="d-flex align-items-center w-50 ms-3">
        <%= link_to 'https://www.themoviedb.org/', target: :_blank, rel: "noopener noreferrer" do %>
          <%= image_tag 'logo_tmdb.svg', size: '50x50', class: 'me-3' %>
        <% end %>
        このサービスはTMDB APIを使用しており、<br />
        TMDBによって承認または認定されています。
      </div>
      <div class="d-flex flex-row-reverse w-50">
        <span class="text-white-50 me-3">© シネマト</span>
        <%= link_to 'プライバシーポリシー', page_path('privacy_policy'), class: 'text-white me-3' %>
        <%= link_to '利用規約', page_path('terms'), class: 'text-white me-3' %>
        <%= link_to 'お問い合わせ', page_path('contact'), class: 'text-white me-3' %>
      </div>
    </div>
  <% end %>
</footer>
